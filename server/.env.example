# Server Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
PORT=3003
NODE_ENV=production

# Database
DATABASE_URL=postgres://user:pass@localhost:5432/fetanpay

# Better Auth Configuration
BETTER_AUTH_SECRET=change-me-to-a-secure-random-string
BETTER_AUTH_BASE_URL=https://api.fetanpay.et
AUTH_BASE_URL=https://api.fetanpay.et

# Frontend URLs
# Payment page URL (where payment links redirect)
PAYMENT_PAGE_URL=https://fetanpay.et
FRONTEND_URL=https://fetanpay.et

# Merchant App URL (where QR codes are scanned)
MERCHANT_APP_URL=https://client.fetanpay.et
CLIENT_APP_URL=https://client.fetanpay.et

# Google OAuth (required for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM="FetanPay" <no-reply@example.com>

# App Configuration
APP_NAME=FetanPay
OTP_EXPIRES_MINUTES=5

# QR Code Configuration (optional, falls back to BETTER_AUTH_SECRET)
QR_CODE_SECRET=optional-qr-code-encryption-secret

# Verification System Configuration (optional)
PUPPETEER_EXECUTABLE_PATH=
BROWSER_POOL_SIZE=3
VERIFICATION_CACHE_TTL=300
SKIP_PRIMARY_VERIFICATION=false

# Mistral AI Configuration (for image verification)
MISTRAL_API_KEY=your-mistral-api-key

# Logging
LOG_LEVEL=info

# Superadmin seed (bootstrap)
# Used by server/prisma/seed.ts to create an initial SUPERADMIN
SUPERADMIN_EMAIL=superadmin@fetanpay.com
SUPERADMIN_PASSWORD=12345678
SUPERADMIN_NAME=Platform Super Admin
