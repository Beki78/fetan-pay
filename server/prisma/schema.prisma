generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TransactionProvider {
  CBE
  TELEBIRR
  AWASH
  BOA
  DASHEN
  AMHARA
  BIRHAN
  CBEBIRR
  COOP
  ENAT
  GADDA
  HIBRET
  WEGAGEN
}

enum ProviderStatus {
  ACTIVE
  COMING_SOON
  DISABLED
}

enum MerchantReceiverAccountStatus {
  ACTIVE
  INACTIVE
}

enum OrderStatus {
  OPEN
  CANCELLED
  PAID
}

enum PaymentVerificationStatus {
  PENDING
  VERIFIED
  UNVERIFIED
}

enum TransactionStatus {
  PENDING
  VERIFIED
  FAILED
  EXPIRED
}

enum MerchantStatus {
  PENDING
  ACTIVE
  SUSPENDED
}

enum MerchantUserRole {
  MERCHANT_OWNER
  ADMIN
  ACCOUNTANT
  SALES
  WAITER
}

enum MerchantUserStatus {
  INVITED
  ACTIVE
  SUSPENDED
}

enum WalletTransactionType {
  DEPOSIT
  CHARGE
  REFUND
  ADJUSTMENT
}

enum WalletDepositStatus {
  PENDING
  VERIFIED
  UNVERIFIED
  EXPIRED
}

enum ApiKeyStatus {
  ACTIVE
  REVOKED
}

enum WebhookStatus {
  ACTIVE
  PAUSED
  FAILED
}

enum WebhookDeliveryStatus {
  PENDING
  SUCCESS
  FAILED
}

enum EmailStatus {
  PENDING
  SENT
  DELIVERED
  FAILED
  BOUNCED
  OPENED
  CLICKED
  UNSUBSCRIBED
}

enum SmsStatus {
  PENDING
  SENT
  DELIVERED
  FAILED
  QUEUED
}

enum EmailTemplateCategory {
  WELCOME
  APPROVAL
  SECURITY
  MARKETING
  REMINDER
  NOTIFICATION
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  SENDING
  SENT
  PAUSED
  CANCELLED
  FAILED
}

enum CampaignType {
  EMAIL
  SMS
  BOTH
}

enum AudienceSegmentType {
  ALL_MERCHANTS
  PENDING_MERCHANTS
  ACTIVE_MERCHANTS
  BANNED_USERS
  INACTIVE_MERCHANTS
  HIGH_VOLUME_MERCHANTS
  NEW_SIGNUPS
  MERCHANT_OWNERS
  WAITERS
  CUSTOM_FILTER
}

enum EngagementEventType {
  EMAIL_SENT
  EMAIL_DELIVERED
  EMAIL_OPENED
  EMAIL_CLICKED
  EMAIL_BOUNCED
  EMAIL_UNSUBSCRIBED
  CAMPAIGN_STARTED
  CAMPAIGN_COMPLETED
}

model Merchant {
  id           String         @id @default(uuid())
  name         String
  tin          String?
  contactEmail String?
  contactPhone String?        @unique
  status       MerchantStatus @default(PENDING)
  source       String?
  approvedAt   DateTime?
  approvedBy   String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  users        MerchantUser[]
  transactions Transaction[]

  receiverAccounts MerchantReceiverAccount[]
  orders           Order[]
  payments         Payment[]
  branding         MerchantBranding?

  // Wallet System
  walletBalance        Decimal   @default(0) @db.Decimal(12, 2)
  walletEnabled        Boolean   @default(false)
  walletChargeType     String?   // "PERCENTAGE" | "FIXED" | null
  walletChargeValue    Decimal?  @db.Decimal(10, 4)
  walletMinBalance     Decimal?  @db.Decimal(10, 2)

  // Wallet Relations
  walletTransactions   WalletTransaction[]
  walletDeposits       WalletDeposit[]

  // API Keys & Webhooks
  apiKeys              ApiKey[]
  webhooks             Webhook[]

  // IP Whitelisting
  ipWhitelistEnabled   Boolean     @default(false)
  ipAddresses          IpAddress[]

  // Email Communications
  emailLogs            EmailLog[]
  smsLogs              SmsLog[]
  engagementEvents     EngagementEvent[]
  unsubscribeList      UnsubscribeList[]

  // Notifications
  notifications        Notification[]

  // Pricing System
  subscriptions        Subscription[]
  planAssignments      PlanAssignment[]
  billingTransactions  BillingTransaction[]
  subscriptionUsage    SubscriptionUsage[]

  merchantViews        AdminMerchantView[]

  // Provider catalog is global (admin-managed), so no relation here.

  @@map("merchant")
}

model AdminMerchantView {
  id         String   @id @default(uuid())
  adminId    String
  merchantId String
  viewedAt   DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  admin    User     @relation(fields: [adminId], references: [id], onDelete: Cascade)
  merchant Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@unique([adminId, merchantId])
  @@index([adminId])
  @@index([merchantId])
  @@map("admin_merchant_view")
}

model PaymentProvider {
  id String @id @default(uuid())

  // This should align with TransactionProvider enum values used by verification.
  // Store as string to keep flexibility but enforce uniqueness.
  code String @unique

  name   String
  logoUrl String?
  status ProviderStatus @default(COMING_SOON)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@map("payment_provider")
}

model MerchantReceiverAccount {
  id         String                        @id @default(uuid())
  merchantId String
  merchant   Merchant                      @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  provider   TransactionProvider
  status     MerchantReceiverAccountStatus @default(ACTIVE)

  // Mock for now: store provider/bank receiver details.
  // Examples: TeleBirr msisdn, bank account number, receiver name, till number, etc.
  receiverLabel   String?
  receiverAccount String
  receiverName    String?
  meta            Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  verifiedPayments Payment[]

  @@unique([merchantId, provider, receiverAccount], name: "merchant_receiver_account_unique")
  @@index([merchantId])
  @@index([merchantId, provider, status])
  @@map("merchant_receiver_account")
}

model Order {
  id         String   @id @default(uuid())
  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  // How much we expect the customer to pay for this order
  expectedAmount Decimal     @db.Decimal(10, 2)
  currency       String      @default("ETB")
  status         OrderStatus @default(OPEN)
  payerName      String?     // Name of the person paying

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  payments Payment[]

  @@index([merchantId])
  @@map("order")
}

model Payment {
  id String @id @default(uuid())

  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // NOTE: this can refer to the system Transaction record (parsed from QR or reference)
  // but we keep it optional to allow manual entry flows.
  transactionId String?
  transaction   Transaction? @relation(fields: [transactionId], references: [id], onDelete: SetNull)

  provider  TransactionProvider
  reference String

  // Waiter-captured amount (what customer claims they paid)
  claimedAmount Decimal  @db.Decimal(10, 2)
  // Optional tip captured with this payment
  tipAmount     Decimal? @db.Decimal(10, 2)

  // Receiver account we matched against (merchant configured)
  receiverAccountId String?
  receiverAccount   MerchantReceiverAccount? @relation(fields: [receiverAccountId], references: [id], onDelete: SetNull)

  status     PaymentVerificationStatus @default(PENDING)
  verifiedAt DateTime?

  verifiedById String?
  verifiedBy   MerchantUser? @relation(fields: [verifiedById], references: [id], onDelete: SetNull)

  mismatchReason      String?
  verificationPayload Json?

  // Wallet integration
  walletCharged        Boolean   @default(false)
  walletChargeAmount   Decimal?  @db.Decimal(10, 2)
  walletTransactionId  String?   @unique
  walletTransaction    WalletTransaction? @relation(fields: [walletTransactionId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([merchantId, provider, reference], name: "payment_merchant_provider_reference_unique")
  @@index([merchantId])
  @@index([orderId])
  @@index([provider, reference])
  @@map("payment")
}

model MerchantUser {
  id                   String             @id @default(uuid())
  merchantId           String
  merchant             Merchant           @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  userId               String?
  user                 User?              @relation(fields: [userId], references: [id], onDelete: SetNull)
  role                 MerchantUserRole
  status               MerchantUserStatus @default(INVITED)
  name                 String?
  email                String?
  phone                String?            @unique
  invitedBy            String?
  qrCodeToken          String?            @unique
  qrCodeGeneratedAt    DateTime?
  encryptedPassword     String?            // Temporarily encrypted password for QR login (cleared after use/expiry)
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  verifiedTransactions Transaction[]      @relation("MerchantUserTransactions")
  payments             Payment[]

  @@index([merchantId])
  @@index([userId])
  @@index([qrCodeToken])
  @@map("merchant_user")
}

model Transaction {
  id                  String              @id @default(uuid())
  provider            TransactionProvider
  reference           String
  qrUrl               String
  status              TransactionStatus   @default(PENDING)
  verifiedAt          DateTime?
  verificationPayload Json?
  errorMessage        String?
  merchantId          String?
  merchant            Merchant?           @relation(fields: [merchantId], references: [id])
  verifiedById        String?
  verifiedBy          MerchantUser?       @relation("MerchantUserTransactions", fields: [verifiedById], references: [id])
  tipAmount           Decimal?            @db.Decimal(10, 2)
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  payments            Payment[]

  @@unique([provider, reference], name: "transaction_provider_reference_key")
  @@map("transaction")
}

model User {
  id            String         @id
  name          String
  email         String
  emailVerified Boolean        @default(false)
  image         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  sessions      Session[]
  accounts      Account[]
  merchantUsers MerchantUser[]
  merchantViews AdminMerchantView[]

  role       String?
  banned     Boolean?  @default(false)
  banReason  String?
  banExpires DateTime?

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String?

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model MerchantBranding {
  id            String   @id @default(uuid())
  merchantId    String   @unique
  merchant      Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  // Logo
  logoUrl       String?

  // Colors
  primaryColor  String   @default("#5CFFCE")
  secondaryColor String  @default("#4F46E5")

  // Text
  displayName   String?
  tagline       String?

  // Options
  showPoweredBy Boolean  @default(true)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("merchant_branding")
}

model EmailTemplate {
  id          String                @id @default(uuid())
  name        String
  category    EmailTemplateCategory
  subject     String
  content     String                // HTML content
  variables   String[]              // Array of variable names like ["merchantName", "loginUrl"]
  isActive    Boolean               @default(true)
  usageCount  Int                   @default(0)
  
  // Template versioning
  version     Int                   @default(1)
  parentId    String?               // Reference to original template for versions
  parent      EmailTemplate?        @relation("TemplateVersions", fields: [parentId], references: [id], onDelete: SetNull)
  versions    EmailTemplate[]       @relation("TemplateVersions")
  
  // Template metadata
  description String?
  tags        String[]              @default([])
  isSystem    Boolean               @default(false) // System templates cannot be deleted

  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt

  emailLogs   EmailLog[]
  smsLogs     SmsLog[]
  campaigns   Campaign[]

  @@map("email_template")
}

model EmailLog {
  id           String      @id @default(uuid())
  toEmail      String
  subject      String
  content      String      // Final rendered content
  templateId   String?
  template     EmailTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  
  // Context
  merchantId   String?
  merchant     Merchant?   @relation(fields: [merchantId], references: [id], onDelete: SetNull)
  sentByUserId String      // Admin user who sent the email
  
  // Campaign context
  campaignId   String?
  campaign     Campaign?   @relation(fields: [campaignId], references: [id], onDelete: SetNull)
  
  // Status tracking
  status       EmailStatus @default(PENDING)
  sentAt       DateTime?
  deliveredAt  DateTime?
  openedAt     DateTime?
  clickedAt    DateTime?
  failedAt     DateTime?
  bouncedAt    DateTime?
  unsubscribedAt DateTime?
  errorMessage String?
  
  // Email provider response
  messageId    String?     // Provider message ID
  metadata     Json?       // Additional provider metadata
  
  // Analytics tracking
  trackingId   String?     @unique // Unique ID for tracking opens/clicks
  openCount    Int         @default(0)
  clickCount   Int         @default(0)
  userAgent    String?     // Browser/client info from opens
  ipAddress    String?     // IP address from opens

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  // Relations
  engagementEvents EngagementEvent[]
  emailClicks      EmailClick[]
  notifications    Notification[]

  @@index([merchantId])
  @@index([sentByUserId])
  @@index([campaignId])
  @@index([status])
  @@index([createdAt])
  @@index([trackingId])
  @@map("email_log")
}

model SmsLog {
  id           String      @id @default(uuid())
  toPhone      String      // Recipient phone number
  message      String      // Final rendered message content
  templateId   String?
  template     EmailTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  
  // Context
  merchantId   String?
  merchant     Merchant?   @relation(fields: [merchantId], references: [id], onDelete: SetNull)
  sentByUserId String      // Admin user who sent the SMS
  
  // Campaign context
  campaignId   String?
  campaign     Campaign?   @relation(fields: [campaignId], references: [id], onDelete: SetNull)
  
  // Status tracking
  status       SmsStatus   @default(PENDING)
  sentAt       DateTime?
  deliveredAt  DateTime?
  failedAt     DateTime?
  errorMessage String?
  
  // SMS provider response
  messageId    String?     // Provider message ID (AfroMessage)
  campaignIdProvider String? // Provider campaign ID for bulk SMS
  metadata     Json?       // Additional provider metadata
  
  // SMS specific fields
  sender       String?     // Sender name used
  segmentCount Int         @default(1) // Number of SMS segments
  cost         Float?      // Cost of sending this SMS
  
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([merchantId])
  @@index([sentByUserId])
  @@index([campaignId])
  @@index([status])
  @@index([createdAt])
  @@index([toPhone])
  @@map("sms_log")
}

model Campaign {
  id              String         @id @default(uuid())
  name            String
  type            CampaignType
  status          CampaignStatus @default(DRAFT)
  
  // Content
  subject         String?        // For email campaigns
  content         String
  templateId      String?
  template        EmailTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  
  // A/B Testing
  isAbTest        Boolean        @default(false)
  abTestVariants  Json?          // Store A/B test variants
  abTestWinner    String?        // Winning variant ID
  
  // Audience
  audienceSegment AudienceSegmentType
  customFilters   Json?          // For CUSTOM_FILTER audience
  
  // Scheduling
  scheduledAt     DateTime?
  sentAt          DateTime?
  completedAt     DateTime?
  
  // Stats
  targetCount     Int            @default(0)
  sentCount       Int            @default(0)
  deliveredCount  Int            @default(0)
  openedCount     Int            @default(0)
  clickedCount    Int            @default(0)
  failedCount     Int            @default(0)
  bouncedCount    Int            @default(0)
  unsubscribedCount Int          @default(0)
  
  // Cost tracking
  estimatedCost   Decimal        @default(0) @db.Decimal(10, 2)
  actualCost      Decimal        @default(0) @db.Decimal(10, 2)
  
  // Metadata
  createdByUserId String
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  
  // Relations
  emailLogs       EmailLog[]
  smsLogs         SmsLog[]
  engagementEvents EngagementEvent[]
  
  @@index([status])
  @@index([createdByUserId])
  @@index([scheduledAt])
  @@index([createdAt])
  @@map("campaign")
}

model EngagementEvent {
  id          String              @id @default(uuid())
  type        EngagementEventType
  
  // Context
  emailLogId  String?
  emailLog    EmailLog?           @relation(fields: [emailLogId], references: [id], onDelete: Cascade)
  campaignId  String?
  campaign    Campaign?           @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  merchantId  String?
  merchant    Merchant?           @relation(fields: [merchantId], references: [id], onDelete: SetNull)
  
  // Event data
  userAgent   String?
  ipAddress   String?
  location    String?             // Geographic location
  deviceType  String?             // mobile, desktop, tablet
  metadata    Json?               // Additional event data
  
  createdAt   DateTime            @default(now())
  
  @@index([type])
  @@index([emailLogId])
  @@index([campaignId])
  @@index([merchantId])
  @@index([createdAt])
  @@map("engagement_event")
}

model EmailClick {
  id          String    @id @default(uuid())
  emailLogId  String
  emailLog    EmailLog  @relation(fields: [emailLogId], references: [id], onDelete: Cascade)
  
  // Click data
  url         String    // The clicked URL
  linkText    String?   // Text of the clicked link
  position    Int?      // Position of link in email (1st, 2nd, etc.)
  
  // Analytics
  userAgent   String?
  ipAddress   String?
  location    String?
  deviceType  String?
  
  clickedAt   DateTime  @default(now())
  
  @@index([emailLogId])
  @@index([url])
  @@index([clickedAt])
  @@map("email_click")
}

model UnsubscribeList {
  id          String    @id @default(uuid())
  email       String    @unique
  merchantId  String?
  merchant    Merchant? @relation(fields: [merchantId], references: [id], onDelete: SetNull)
  
  // Unsubscribe context
  campaignId  String?   // Campaign that triggered unsubscribe
  emailLogId  String?   // Specific email that triggered unsubscribe
  reason      String?   // Reason for unsubscribing
  
  // Metadata
  userAgent   String?
  ipAddress   String?
  
  createdAt   DateTime  @default(now())
  
  @@index([email])
  @@index([merchantId])
  @@index([createdAt])
  @@map("unsubscribe_list")
}

model SavedAudienceSegment {
  id          String              @id @default(uuid())
  name        String
  description String?
  
  // Segment definition
  segmentType AudienceSegmentType
  filters     Json                // Custom filters for the segment
  
  // Usage tracking
  usageCount  Int                 @default(0)
  lastUsedAt  DateTime?
  
  // Metadata
  createdByUserId String
  isPublic    Boolean             @default(false) // Can other admins use this segment
  
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  
  @@index([createdByUserId])
  @@index([segmentType])
  @@index([createdAt])
  @@map("saved_audience_segment")
}

model WalletTransaction {
  id              String   @id @default(uuid())
  merchantId      String
  merchant        Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  // Transaction details
  type            WalletTransactionType
  amount          Decimal  @db.Decimal(12, 2)  // Positive for deposits, negative for charges
  balanceBefore   Decimal  @db.Decimal(12, 2)
  balanceAfter    Decimal  @db.Decimal(12, 2)

  // Related entities
  payment         Payment?
  walletDeposit   WalletDeposit?
  orderId         String?

  // Metadata
  description     String?
  metadata        Json?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([merchantId])
  @@index([createdAt])
  @@map("wallet_transaction")
}

model WalletDepositReceiverAccount {
  id              String   @id @default(uuid())

  // Admin-configured receiver account for wallet deposits
  provider        TransactionProvider
  receiverAccount String
  receiverName    String?
  receiverLabel   String?

  // Status
  status          String   @default("ACTIVE")  // "ACTIVE" | "INACTIVE"

  // Metadata
  meta            Json?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  verifiedDeposits WalletDeposit[]

  @@unique([provider, receiverAccount], name: "wallet_deposit_receiver_unique")
  @@index([provider, status])
  @@map("wallet_deposit_receiver_account")
}

model WalletDeposit {
  id              String   @id @default(uuid())
  merchantId      String
  merchant        Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  // Deposit verification details
  provider        TransactionProvider
  reference       String
  amount          Decimal  @db.Decimal(12, 2)

  // Receiver account used
  receiverAccountId String
  receiverAccount   WalletDepositReceiverAccount @relation(fields: [receiverAccountId], references: [id], onDelete: Restrict)

  // Verification status
  status          WalletDepositStatus @default(PENDING)
  expiresAt       DateTime?  // 30 minutes from creation
  verifiedAt      DateTime?
  verifiedBy      String?

  // Verification payload from bank API
  verificationPayload Json?

  // Related wallet transaction (created after verification)
  walletTransactionId String?   @unique
  walletTransaction   WalletTransaction? @relation(fields: [walletTransactionId], references: [id], onDelete: SetNull)

  // Metadata
  description     String?
  errorMessage    String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([merchantId, provider, reference], name: "wallet_deposit_unique")
  @@index([merchantId])
  @@index([provider, reference])
  @@index([status])
  @@map("wallet_deposit")
}

model ApiKey {
  id            String      @id @default(uuid())
  merchantId    String
  merchant      Merchant   @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  
  name          String      // User-friendly name (e.g., "Production API Key", "Test Key")
  keyHash       String      @unique // Hashed API key (never store plain text)
  keyPrefix     String      // First 8 chars for display (e.g., "fetan_live_")
  
  status        ApiKeyStatus @default(ACTIVE) // ACTIVE, REVOKED
  lastUsedAt    DateTime?
  expiresAt     DateTime?   // Optional expiration
  
  // Permissions/Scopes (future: fine-grained access control)
  scopes        String[]    // e.g., ["payments:verify", "payments:read"]
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  createdBy     String?     // merchantUserId who created it
  
  @@index([merchantId])
  @@index([keyHash])
  @@index([status])
  @@map("api_key")
}

model Webhook {
  id            String   @id @default(uuid())
  merchantId    String
  merchant      Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  
  url           String   // Webhook endpoint URL
  secret        String   // Secret for signature verification
  status        WebhookStatus @default(ACTIVE) // ACTIVE, PAUSED, FAILED
  
  // Event subscriptions
  events        String[] // e.g., ["payment.verified", "payment.failed"]
  
  // Retry configuration
  maxRetries    Int      @default(3)
  timeout       Int      @default(30000) // milliseconds
  
  // Statistics
  successCount  Int      @default(0)
  failureCount  Int      @default(0)
  lastTriggeredAt DateTime?
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  createdBy     String?  // merchantUserId who created it
  
  // Relations
  deliveries    WebhookDelivery[]
  
  @@index([merchantId])
  @@index([status])
  @@map("webhook")
}

model WebhookDelivery {
