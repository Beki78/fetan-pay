generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TransactionProvider {
  CBE
  TELEBIRR
  AWASH
  BOA
  DASHEN
}

enum ProviderStatus {
  ACTIVE
  COMING_SOON
  DISABLED
}

enum MerchantReceiverAccountStatus {
  ACTIVE
  INACTIVE
}

enum OrderStatus {
  OPEN
  CANCELLED
  PAID
}

enum PaymentVerificationStatus {
  PENDING
  VERIFIED
  UNVERIFIED
}

enum TransactionStatus {
  PENDING
  VERIFIED
  FAILED
  EXPIRED
}

enum MerchantStatus {
  PENDING
  ACTIVE
  SUSPENDED
}

enum MerchantUserRole {
  MERCHANT_OWNER
  ADMIN
  ACCOUNTANT
  SALES
  WAITER
}

enum MerchantUserStatus {
  INVITED
  ACTIVE
  SUSPENDED
}

model Merchant {
  id           String         @id @default(uuid())
  name         String
  tin          String?
  contactEmail String?
  contactPhone String?
  status       MerchantStatus @default(PENDING)
  source       String?
  approvedAt   DateTime?
  approvedBy   String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  users        MerchantUser[]
  transactions Transaction[]

  receiverAccounts MerchantReceiverAccount[]
  orders           Order[]
  payments         Payment[]
  branding         MerchantBranding?

  // Provider catalog is global (admin-managed), so no relation here.

  @@map("merchant")
}

model PaymentProvider {
  id String @id @default(uuid())

  // This should align with TransactionProvider enum values used by verification.
  // Store as string to keep flexibility but enforce uniqueness.
  code String @unique

  name   String
  logoUrl String?
  status ProviderStatus @default(COMING_SOON)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@map("payment_provider")
}

model MerchantReceiverAccount {
  id         String                        @id @default(uuid())
  merchantId String
  merchant   Merchant                      @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  provider   TransactionProvider
  status     MerchantReceiverAccountStatus @default(ACTIVE)

  // Mock for now: store provider/bank receiver details.
  // Examples: TeleBirr msisdn, bank account number, receiver name, till number, etc.
  receiverLabel   String?
  receiverAccount String
  receiverName    String?
  meta            Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  verifiedPayments Payment[]

  @@unique([merchantId, provider, receiverAccount], name: "merchant_receiver_account_unique")
  @@index([merchantId])
  @@index([merchantId, provider, status])
  @@map("merchant_receiver_account")
}

model Order {
  id         String   @id @default(uuid())
  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  // How much we expect the customer to pay for this order
  expectedAmount Decimal     @db.Decimal(10, 2)
  currency       String      @default("ETB")
  status         OrderStatus @default(OPEN)
  payerName      String?     // Name of the person paying

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  payments Payment[]

  @@index([merchantId])
  @@map("order")
}

model Payment {
  id String @id @default(uuid())

  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  // NOTE: this can refer to the system Transaction record (parsed from QR or reference)
  // but we keep it optional to allow manual entry flows.
  transactionId String?
  transaction   Transaction? @relation(fields: [transactionId], references: [id], onDelete: SetNull)

  provider  TransactionProvider
  reference String

  // Waiter-captured amount (what customer claims they paid)
  claimedAmount Decimal  @db.Decimal(10, 2)
  // Optional tip captured with this payment
  tipAmount     Decimal? @db.Decimal(10, 2)

  // Receiver account we matched against (merchant configured)
  receiverAccountId String?
  receiverAccount   MerchantReceiverAccount? @relation(fields: [receiverAccountId], references: [id], onDelete: SetNull)

  status     PaymentVerificationStatus @default(PENDING)
  verifiedAt DateTime?

  verifiedById String?
  verifiedBy   MerchantUser? @relation(fields: [verifiedById], references: [id], onDelete: SetNull)

  mismatchReason      String?
  verificationPayload Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([merchantId, provider, reference], name: "payment_merchant_provider_reference_unique")
  @@index([merchantId])
  @@index([orderId])
  @@index([provider, reference])
  @@map("payment")
}

model MerchantUser {
  id                   String             @id @default(uuid())
  merchantId           String
  merchant             Merchant           @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  userId               String?
  user                 User?              @relation(fields: [userId], references: [id], onDelete: SetNull)
  role                 MerchantUserRole
  status               MerchantUserStatus @default(INVITED)
  name                 String?
  email                String?
  phone                String?
  invitedBy            String?
  qrCodeToken          String?            @unique
  qrCodeGeneratedAt    DateTime?
  encryptedPassword     String?            // Temporarily encrypted password for QR login (cleared after use/expiry)
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  verifiedTransactions Transaction[]      @relation("MerchantUserTransactions")
  payments             Payment[]

  @@index([merchantId])
  @@index([userId])
  @@index([qrCodeToken])
  @@map("merchant_user")
}

model Transaction {
  id                  String              @id @default(uuid())
  provider            TransactionProvider
  reference           String
  qrUrl               String
  status              TransactionStatus   @default(PENDING)
  verifiedAt          DateTime?
  verificationPayload Json?
  errorMessage        String?
  merchantId          String?
  merchant            Merchant?           @relation(fields: [merchantId], references: [id])
  verifiedById        String?
  verifiedBy          MerchantUser?       @relation("MerchantUserTransactions", fields: [verifiedById], references: [id])
  tipAmount           Decimal?            @db.Decimal(10, 2)
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  payments            Payment[]

  @@unique([provider, reference], name: "transaction_provider_reference_key")
  @@map("transaction")
}

model User {
  id            String         @id
  name          String
  email         String
  emailVerified Boolean        @default(false)
  image         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  sessions      Session[]
  accounts      Account[]
  merchantUsers MerchantUser[]

  role       String?
  banned     Boolean?  @default(false)
  banReason  String?
  banExpires DateTime?

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String?

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model MerchantBranding {
  id            String   @id @default(uuid())
  merchantId    String   @unique
  merchant      Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  // Logo
  logoUrl       String?

  // Colors
  primaryColor  String   @default("#5CFFCE")
  secondaryColor String  @default("#4F46E5")

  // Text
  displayName   String?
  tagline       String?

  // Options
  showPoweredBy Boolean  @default(true)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("merchant_branding")
}
